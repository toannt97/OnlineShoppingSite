@model OnlineShoppingWebApp.Models.UserSignIn

<link href='~/css/login.css' rel='stylesheet' type='text/css'>

<div class="login-form">
    <div class="main-div">
        <div class="panel">
            <h1>Login</h1>
        </div>
        <form id="#LoginForm" asp-action="SignIn" asp-controller="Login" onsubmit="return jQueryAxjaxSignInPost(this)">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input type="email" class="form-control" id="email-login-js" placeholder="Email Address" asp-for="EmailAddress">
                <span asp-validation-for="EmailAddress" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="password" class="form-control" id="password-login-js" placeholder="Password" asp-for="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="forgot">
                <a href="reset.html">Forgot password?</a>
            </div>
            <button type="submit" class="btn btn-primary">Sign in</button>
        </form>
    </div>
</div>

<!--Script-->
<script src="~/js/login.js"></script>